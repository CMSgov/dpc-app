<div>
    <div class="margin-bottom-5">&larr; <%= link_to 'Provider Org Name', organizations_path %></div>
    <h1>Add Public Key</h1>

    <section class="box">
        <div>
            <h2>New Public Key for <%= @organization.name %></h2>
            <%= form_tag organization_public_keys_path(organization_id: params[:organization_id]), method: :post do %>

                <%= render(Core::Form::TextInputComponent.new(label: "Label", attribute: :label, default: params[:label], hint: 'Choose a descriptive name to make your key easily identifiable to you.')) %>
                <%= render(Core::Form::TextAreaComponent.new(label: "Public Key", attribute: :public_key, default: params[:public_key], hint: 'Must include the "BEGIN PUBLIC KEY" and "END PUBLIC KEY" tags from your public.pem file.')) %>
                <%= render(Core::Form::TextAreaComponent.new(label: "Signature Snippet", attribute: :snippet_signature, default: params[:snippet_signature], hint: 'Must yield "Verified Ok" results in order to generate the signature.sig file.')) %>

                <%= submit_tag "Add key" %>
            <% end %>
        </div>
    </section>
</div>