<li class="usa-card tablet-lg:grid-col-1 widescreen:grid-col-1" style="list-style:none; visibility:visible;" data-npi="<%= @organization.npi%>" data-name="<%= @organization.name%>">
  <div class="usa-card__container">
    <div class="usa-card__header">
      <h2 class="usa-card__heading">
        <%= @organization.name %>
      </h2>
    </div>
    <div class="usa-card__body">
      <div class="clearfix">
        <div id="npi_div" class="float-left">
          <p class="usa-card__text">
            <span style="font-weight:bold">NPI</span>
            <span><%= @organization.npi %></span>
          </p>
        </div>
        <div id="status_div" class="float-right">
          <p class="usa-card__text">
            <%= render Core::Button::ButtonComponent.new(label: 'View Details', destination: organization_path(@organization), additional_classes: ['usa-button--outline']) %>
          </p>
        </div>
      </div>
      <div class="clearfix">
        <div class="float-left"><%= render Core::Icon::UswdsComponent.new(@icon, additional_classes: @classes) %></div>
        <div class="float-left margin-left-1 margin-top-neg-2px"><%= @status %></div>
      </div>
    </div>
  </div>
</li>
