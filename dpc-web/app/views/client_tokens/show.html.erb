<% title "Client Token" %>

<div class="ds-l-container ds-u-padding-x--0">
  <h1 class="ds-u-font-size--title ds-u-font-weight--normal ds-u-margin--0">Success! Here is your new client token.</h1>
  <section class="box">
    <div class="box__content">
      <div class="ds-c-alert ds-u-margin-bottom--7">
        <div class="ds-c-alert__body">
          <h2 class="ds-c-alert__heading">Copy or download your token right now! You wonâ€™t be able to see it again.</h2>
        </div>
      </div>
      <h2 class="box__heading ds-u-margin-bottom--0"><%= @client_token['label'] %></h2>
      <p class="ds-u-color--muted ds-u-margin-top--0">Created at <%= formatted_datestr(@client_token['createdAt']) %></p>
      <div class="ds-u-margin-y--5">
        <label for="token" class="ds-c-label ds-u-font-size--h3">Your token</label>
          <textarea id="token" class="ds-c-field ds-c-field--copy" rows="9" readonly="readonly"><%= @client_token['token'] %></textarea>
      </div>
    </div>
  </section>
  <div>
    <%= link_to portal_path, class: "ds-c-button ds-c-button--primary", data: { test: 'portal-link' } do %>
      Go to portal
      <svg class="icon ds-u-margin-left--1" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
        <use xlink:href="/assets/solid.svg#arrow-right"></use>
      </svg>
    <% end %>
  </div>
</div>

