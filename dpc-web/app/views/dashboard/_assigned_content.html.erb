<div class="ds-l-row--12">
  <% @user.organizations.each do |organization| %>

    <h1><%= organization.name %></h1>

    <section class="box">
      <div class="box__content">
        <%= link_to new_organization_client_token_path(organization_id: organization.id), class: "utility-button", data: { test: "new-client-token" } do %>
          <svg class="ds-u-color--success" xmlns="http://www.w3.org/2000/svg" aria-hidden="true">
            <use xlink:href="/assets/solid.svg#plus"></use>
          </svg>
          New token
        <% end %>

        <h2 class="box__heading ds-h2">Client tokens</h2>

        <div class="ds-l-row--12">
          <div class="ds-l-col--12">
            No tokens yet.
          </div>
        </div>
      </div>
    </section>

    <section class="box">
      <div class="box__content">
        <h2 class="box__heading">Public Keys</h2>

        <div class="ds-l-row--12">
          <div class="ds-l-col--12">
            No keys yet.
          </div>
        </div>
      </div>
    </section>
  <% end %>
</div>