<%# Link showing page number
  - available local variables
    page:          a page object for "this" page
    url:           url to this page
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
-%>
<li class="usa-pagination__item usa-pagination__page-no usa-pagination<%= '-current' if page.current? %>">
  <% unless page.current? %>
    <%= link_to url, page, {remote: remote, rel: page.rel, class: "usa-pagination__button", aria: {label: "Page"}} %>
  <% else %>
    <p class="usa-pagination__button" aria-label="Page">
      <%= page %> 
    </p>
  <% end %>
</li>
