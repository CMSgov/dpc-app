<%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :post }) do |f| %>
  <div class="field">
    <%= f.label :first_name, class: "ds-c-label" %>
    <%= f.text_field :first_name, class: "ds-c-field", value: '', onkeyup: "fieldBlankCheck('user_first_name', 'user_first_name_blank')" %>
    <div class="ds-u-color--error-dark" id="user_first_name_blank">
    </div>
  </div>

  <div class="field">
    <%= f.label :last_name, class: "ds-c-label" %>
    <%= f.text_field :last_name, class: "ds-c-field", value: '', onkeyup: "fieldBlankCheck('user_last_name', 'user_last_name_blank')" %>
    <div class="ds-u-color--error-dark" id="user_last_name_blank">
    </div>
  </div>

  <div class="field">
    <%= f.label :email, class: "ds-c-label" %>
    <%= f.email_field :email, autocomplete: "email", class: "ds-c-field", value: '', onkeyup: "fieldBlankCheck('user_email', 'user_email_blank')" %>
    <div class="ds-u-color--error-dark" id="user_email_blank">
    </div>
  </div>

  <div class="actions ds-u-margin-top--6">
    <%= f.hidden_field :implementer, value: current_user.implementer %>
    <%= f.hidden_field :implementer_id, value: current_user.implementer_id %>
    <%= f.submit t("devise.invitations.new.submit_button"), class: "ds-c-button ds-c-button--primary", data: {test: "submit"} %>
  </div>
<% end %>