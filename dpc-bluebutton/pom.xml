        </dependency>
       <dependency>
          <groupId>gov.cms.dpc</groupId>
          <artifactId>dpc-common</artifactId>
          <version>0.4.0-SNAPSHOT</version>
          <scope>compile</scope>
       </dependency>
        <dependency>
            <groupId>org.bouncycastle</groupId>
            <artifactId>bcprov-jdk15on</artifactId>
            <version>${bouncey.version}</version>
        </dependency>
    </dependencies>

    <build>
        <testResources>
