<configuration>
    <appender name="BufferedLogger" class="gov.cms.dpc.testing.RingBufferLogger">
        <encoder>
            <pattern>%-4relative [%thread] %-5level %logger{35} - %msg %n</pattern>
        </encoder>
    </appender>
    <root level="trace">
        <logger name="org.hibernate.SQL" level="DEBUG" />
        <logger name="org.hibernate.type" level="DEBUG" />

        <appender-ref ref="BufferedLogger"/>
    </root>
</configuration>