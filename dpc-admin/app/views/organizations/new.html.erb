<% title "New Organization" %>

<div class="ds-l-container ds-u-padding-x--0">

  <section class="ds-u-display--flex ds-u-justify-content--between ds-u-align-items--center">

    <h1 class="ds-u-font-size--title ds-u-font-weight--normal ds-u-margin--0" data-test="new-org-page">Create a new organization</h1>

  </section>

  <section class="box">
    <div class="box__content">
      <%= form_for @organization, url: organizations_path do |f| %>
        <%= render 'organizations/fields', f: f, locals: { button_label: "Create organization"}%>
      <% end %>
    </div>
  </section>
</div>

